<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddNoteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_add_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/et_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_add_toolbar"
        android:layout_margin="16dp"
        android:inputType="text"
        android:maxLength="40"
        android:maxLines="1"
        android:layout_width="match_parent"
        tools:text="Some note"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:inputType="text|textMultiLine"
        android:gravity="top|left"
        tools:text="bsdj sdkjfbs jdkbfscbsb dsj cvskjd bskjdb skdbskjdbvsjkd s bvsdj vbskjds dbkjsd bv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>